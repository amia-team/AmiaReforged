{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Backup": {
    "BackupDirectory": "/var/backups/amia/sql",
    "GitRepositoryPath": "/var/backups/amia",
    "GitRemote": "origin",
    "GitBranch": "main",
    "IntervalMinutes": 60,
    "PgDumpPath": "pg_dump",
    "ServerVaultSourcePathEnvVar": "SERVERVAULT_PATH",
    "DefaultServerVaultSourcePath": "",
    "CharactersBackupSubdirectory": "characters",
    "EnableCharacterVaultBackup": true,
    "DiscordWebhookUrlEnvVar": "DISCORD_WEBHOOK_URL",
    "ServerHealthEndpoint": "http://localhost:8080/api/worldengine/health",
    "ServerHealthEndpointEnvVar": "SERVER_HEALTH_ENDPOINT",
    "HealthCheckTimeoutSeconds": 10,
    "SkipCharacterBackupOnUnhealthyServer": true,
    "Databases": [
      {
        "Name": "amia",
        "HostEnvVar": "POSTGRES_HOST",
        "PortEnvVar": "POSTGRES_PORT",
        "DatabaseEnvVar": "POSTGRES_DB",
        "UserEnvVar": "POSTGRES_USER",
        "PasswordEnvVar": "POSTGRES_PASSWORD",
        "DefaultHost": "localhost",
        "DefaultPort": 5432,
        "DefaultDatabase": "amia",
        "DefaultUser": "amia",
        "DefaultPassword": ""
      },
      {
        "Name": "pw_engine",
        "HostEnvVar": "PW_HOST",
        "PortEnvVar": "PW_PORT",
        "DatabaseEnvVar": "PW_DB",
        "UserEnvVar": "PW_USER",
        "PasswordEnvVar": "PW_PASSWORD",
        "DefaultHost": "localhost",
        "DefaultPort": 5432,
        "DefaultDatabase": "pw_engine",
        "DefaultUser": "amia",
        "DefaultPassword": ""
      },
      {
        "Name": "simulation",
        "HostEnvVar": "SIM_HOST",
        "PortEnvVar": "SIM_PORT",
        "DatabaseEnvVar": "SIM_DB",
        "UserEnvVar": "SIM_USER",
        "PasswordEnvVar": "SIM_PASSWORD",
        "DefaultHost": "localhost",
        "DefaultPort": 5432,
        "DefaultDatabase": "world_simulation",
        "DefaultUser": "amia",
        "DefaultPassword": ""
      }
    ]
  }
}
