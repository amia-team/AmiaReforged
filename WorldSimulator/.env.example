# WorldSimulator Environment Configuration
# Copy this file to .env and customize for your environment

# Environment Name (development, staging, production)
ENVIRONMENT_NAME=development

# Database Configuration - Separate PostgreSQL instance for WorldSimulator
ConnectionStrings__WorldSimulator=Host=localhost;Database=WorldSimulator;Username=worldsim;Password=worldsim;Include Error Detail=true

# WorldEngine Integration - Game server endpoints for health checks
WorldEngine__Host=http://localhost:8080
WorldEngine__HealthEndpoint=/health
WorldEngine__TimeoutSeconds=30

# Circuit Breaker - Prevents runaway simulation when server is down
CircuitBreaker__CheckIntervalSeconds=30
CircuitBreaker__TimeoutSeconds=5

# Simulation Settings
Simulation__PollIntervalSeconds=5
Simulation__CircuitBreakerWaitSeconds=30
Simulation__MaxConcurrentJobs=5
Simulation__JobTimeoutMinutes=5

# Discord Notifications (optional, toggle at runtime)
Discord__Enabled=false
Discord__WebhookUrl=

# Logging Level (Debug, Information, Warning, Error)
Serilog__MinimumLevel__Default=Information

